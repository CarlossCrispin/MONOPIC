<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Cargar una imagen
        </h3>
    </div>
    <form action="/images/create" method="post" enctype="multipart/form-data" autocomplete="off">
        <div class="panel-body form-horizontal">
            <div class="form-group col-md-12">
                <label for="file" class="col-sm-2 control-label">
                    Buscar:
                </label>
                <div class="col-md-10">
                    <input type="file" class="form-control" name="file" id="file" required formnovalidate="formnovalidate">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="title" class="col-sm-2 control-label">
                    Titulo:
                </label>
                <div class="col-md-10">
                    <input required formnovalidate="formnovalidate" type="text" class="form-control" name="title">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="description" class="col-md-2 control-label">
                    Descripci√≥n:
                </label>
                <div class="col-md-10">
                    <textarea name="description" rows="2" class="form-control" required formnovalidate="formnovalidate">
                    </textarea>

                </div>
            </div>
            <div class="form-group col-md-12">
                <div class="col-md-12 text-right">
                    <button class="btn btn-success" type="submit" id="login-btn">
                        <i class="fa fa-cloud-upload"></i>
                        Cargar imagen
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Imagenes Recientes
        </h3>
    </div>
    <div class="panel-body">
        {{#each images}}
        <div class="col-md-4 text-center" style="padding-bottom: 1em;">
            <a href="/images/index/{{uniqueId}}">
                <img class="img-thumbnail" style="width: 175px; height: 175px;" src="/public/upload/{{filename}}" alt="{{title}}">
            </a>
        </div>
        {{/each}}
    </div>
</div>